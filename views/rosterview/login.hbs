<h4 style="margin-top: 7%;" align='center'>{{viewTitle}}</h4>

<form action="/user/login" method="post">
    <div class="col s12">
        <input type="email" name="email" class="text col s4 offset-m4" placeholder="Email">
        <input type="password" name="password" class="text col s4 offset-m4" placeholder="Password">
        <div class="col s3 offset-m6">
            <button class="btn waves-effect waves-light col s7" type="submit">Login
                <i class="material-icons right">login</i/>
            </button>
        </div>
    </div>
</form>

